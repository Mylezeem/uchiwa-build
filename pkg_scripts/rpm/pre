# Install package - add user
if [ $1 -eq 1 ]; then
    # Create uchiwa group
    if ! getent group uchiwa >/dev/null; then
        groupadd -r uchiwa
    fi

    # Create uchiwa user
    if ! getent passwd uchiwa >/dev/null; then
        useradd -r -g uchiwa -d /opt/uchiwa \
            -s /bin/false -c "Uchiwa, a Sensu dashboard" uchiwa
    fi
fi
